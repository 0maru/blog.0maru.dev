---
interface Props {
  title: string;
  image: string;
  createdAt: string;
  url: string | undefined;
  tags: string[];
}

const {title, createdAt, url, tags} = Astro.props;
const formattedDate = createdAt.slice(0, 10).replaceAll('-', '/');
---

<article
  class="article-card bg-gray-800 rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 hover:translate-y-[-4px]"
>
  <a href={url} class="block">
    <div class="relative">
      <div class="absolute top-0 right-0 p-2">
        {
          tags
            .slice(0, 2)
            .map((tag) => (
              <span class="inline-block px-2 py-1 text-xs font-semibold rounded-md bg-blue-600 text-white mr-1 mb-1">
                {tag}
              </span>
            ))
        }
      </div>
    </div>
    <div class="p-4">
      <h2 class="text-xl font-bold text-white mb-2 line-clamp-2">{title}</h2>
      <div class="flex justify-between items-center mt-3">
        <p class="text-gray-400 text-sm">{formattedDate}</p>
        <span class="text-blue-400 text-sm font-medium">Read more &rarr;</span>
      </div>
    </div>
  </a>
</article>

<style>
  .article-card {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .article-card a {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .article-card img {
    transition: transform 0.3s ease;
  }

  .article-card:hover img {
    transform: scale(1.05);
  }
</style>
