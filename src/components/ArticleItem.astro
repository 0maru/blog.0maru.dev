---
interface Props {
  title: string;
  image?: string;
  createdAt: string;
  url: string | undefined;
  tags: string[];
}

const {title, createdAt, url, tags} = Astro.props;
const formattedDate = createdAt.slice(0, 10);
---

<article class="article-item pb-6">
  <div class="flex flex-col md:flex-row gap-4">
    <div class="w-full md:w-3/4">
      <div class="mb-2">
        <span class="text-gray-400 text-sm">{formattedDate}</span>
      </div>
      <a href={url} class="block group">
        <h2 class="text-xl md:text-2xl font-bold text-white group-hover:text-blue-400 transition-colors">
          {title}
        </h2>
      </a>
      <div>
        {tags.map((tag) => (
          <span class="inline-block pr-4 py-1 text-sm text-white">
            # {tag}
          </span>
        ))}
      </div>
    </div>
  </div>
</article>

<style>
  .article-item:last-child {
    border-bottom: none;
  }
</style>
