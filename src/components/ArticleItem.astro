---
interface Props {
  title: string;
  image?: string;
  createdAt: string;
  url: string | undefined;
  tags: string[];
}

const {title, createdAt, url, tags} = Astro.props;
const formattedDate = createdAt.slice(0, 10);
---

<article
  class="group relative bg-header rounded-lg p-6 transition-all h-full flex flex-col border-t-2 border-accent hover:shadow-lg hover:shadow-accent/20"
>
  <a href={url} class="absolute inset-0 z-0 rounded-lg"></a>
  <div class="mb-3">
    <span class="text-gray-400 text-sm">{formattedDate}</span>
  </div>
  <div class="grow">
    <h2 class="text-xl font-bold text-white group-hover:text-accent transition-colors mb-4">
      {title}
    </h2>
  </div>
  <div class="flex flex-wrap gap-2 mt-auto relative z-10">
    {
      tags.map((tag) => (
        <a href={`/tags/${encodeURIComponent(tag)}`} class="inline-block">
          <span class="inline-block px-3 py-1 text-sm text-white bg-surface hover:bg-surface-hover rounded-full transition-colors">
            #{tag}
          </span>
        </a>
      ))
    }
  </div>
</article>
